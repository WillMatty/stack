<%= content_for :page_title, @story.title %>

<div class='single_story story'>

  <h2>
    <%= link_to @story.title, @story.url %>
  </h2>

  <p>
    <%= @story.description %>
  </p>

  <ul>
    <li>Upvote</li>
    <li>1 vote</li>
    <li><%= @story.nice_url %></li>
    <li><%= time_ago_in_words @story.created_at %> ago</li>
  </ul>

  <div class='actions'>
    <%= link_to 'Edit', edit_story_path(@story), class: 'edit' %>
    <%= link_to 'Delete',
          story_path(@story),
          method: :delete,
          class: 'delete',
          confirm: 'Are you sure you want to delete this story?' 
      %>
  </div>
  
</div>
